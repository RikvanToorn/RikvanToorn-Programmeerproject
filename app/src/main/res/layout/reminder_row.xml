<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTextViewRow"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="17 jan. 2017 18:56:47"
            android:textSize="12sp"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/locationTextViewRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Marshalllaan 292"/>

            <TextView
                android:id="@+id/distanceTextViewRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:text="- 300m"/>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/titleTextViewRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Melk halen"/>

    <TextView
        android:id="@+id/descriptionTextViewRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Niet vergeten melk te halen bij de supermarkt"/>

</LinearLayout>